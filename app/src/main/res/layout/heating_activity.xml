<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeatingActivity"
    android:background="#9912988C">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#008577"/>

    <EditText
        android:id="@+id/editTextMinTemperature"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="207dp"
        android:hint="Enter Min Temperature"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextMaxTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="215dp"
        android:layout_marginBottom="374dp"
        android:hint="Enter Max Temperature"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="138dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="269dp"
        android:layout_marginBottom="297dp"
        android:text="Submit" />

    <TextView
        android:id="@+id/textViewTemperatureDisplay"
        android:layout_width="282dp"
        android:layout_height="84dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="541dp"
        android:text=""
        android:textSize="18sp" />

    <Switch
        android:id="@+id/switchHeating"
        android:layout_width="323dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="495dp"
        android:checked="false"
        android:text="Automated Heating"
        android:textSize="24sp"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</RelativeLayout>